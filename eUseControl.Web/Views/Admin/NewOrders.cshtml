
@{
    ViewBag.Title = "NewOrders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model eUseControl.Web.Models.ANewOrdersData

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Product list card start -->
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="select-shoing-wrap d-flex align-items-center">
                        <div class="shot-product">
                            <p>Sort By:</p>
                        </div>
                        <!-- Single Wedge End -->
                        <div class="header-bottom-set dropdown">
                            <button class="dropdown-toggle header-action-btn" data-bs-toggle="dropdown">Default <i class="fa fa-angle-down"></i></button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a class="dropdown-item" href="#">Name, A to Z</a></li>
                                <li><a class="dropdown-item" href="#">Name, Z to A</a></li>
                                <li><a class="dropdown-item" href="#">Order, new to old</a></li>
                                <li><a class="dropdown-item" href="#">Order, old to new</a></li>
                            </ul>
                        </div>
                        <!-- Single Wedge Start -->
                    </div>
                    <div style="margin-left: 15px;">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search in orders list" aria-label="Search">
                            <button type="submit" class="btn btn-primary btn" style="width: 80px; height: 50px;">Search</button>
                        </form>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Qty</th>
                                <th scope="col">Order time</th>
                                <th scope="col">Customer</th>
                                <th scope="col">Address / Phone</th>
                                <th scope="col">Price</th>
                                <th scope="col">Total</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                int i = 1;
                                double total;
                                DateTime time;
                            }
                            @foreach (var order in Model.Orders)
                            {
                                total = order.Quantity * order.Price;
                                time = order.AddedDate;
                                <tr>
                                    <th scope="row" class="align-middle">@i</th>
                                    <td class="align-middle">@order.ProductName</td>
                                    <td class="align-middle">@order.Quantity</td>
                                    <td class="align-middle">@time.ToString("dd/MM/yyyy")<br>@time.ToString("HH:mm")</td>
                                    <td class="align-middle">@order.Address.FirstName<br>@order.Address.LastName</td>
                                    <td class="align-middle">@order.Address.StreetAddress @order.Address.City @order.Address.State @order.Address.Country @order.Address.PostCode<br>@order.Address.Phone</td>
                                    <td class="align-middle">$@order.Price</td>
                                    <td class="align-middle">$@total</td>
                                    <td><div><a href="#"><button type="button" class="btn btn-primary btn" style="width: 80px; height: 50px;">Sent</button></a></div></td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Product list card end -->
        </div>
    </div>
    <!-- Add Contact Start Model start-->
    <div class="md-modal md-effect-13 addcontact" id="modal-13">
        <div class="md-content">
            <h3 class="f-26">Add Product</h3>
            <div>
                <div class="input-group">
                    <span class="input-group-addon btn btn-primary">Chooese File</span>
                </div>
                <div class="input-group">
                    <input type="text" class="form-control pname" placeholder="Prodcut Name">
                </div>
                <div class="input-group">
                    <input type="text" class="form-control pname" placeholder="Category">
                </div>
                <div class="input-group">
                    <input type="text" class="form-control pamount" placeholder="Amount">
                </div>
                <div class="input-group">
                    <input type="number" class="form-control pname" placeholder="num of items">
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-primary waves-effect m-r-20 f-w-600 d-inline-block save_btn">Save</button>
                    <button type="button" class="btn btn-primary waves-effect m-r-20 f-w-600 md-close d-inline-block close_btn">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="md-overlay"></div>
    <!-- Add Contact Ends Model end-->
</div>

