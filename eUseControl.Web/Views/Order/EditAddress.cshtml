
@{
    ViewBag.Title = "EditAddress";
}

@model eUseControl.Web.Models.MyAccountData 

<div class="container">
    <div class="row  d-flex justify-content-center" style="margin-top: 30px;">
        <div class="col-8">
            <div>
                <h1 style="text-align: center;">Edit shipping address</h1>
            </div>
            @using (Html.BeginForm("EditAddress", "Order", FormMethod.Post, new { autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Address.AddressId, new { @value = Model.Address.AddressId });
                @Html.HiddenFor(m => m.Address.UserId, new { @value = Model.Address.UserId });
                <div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputEmail1">Current FirstName: <span style="color: green;">@Model.Address.FirstName</span></label>
                        @Html.TextBoxFor(m => m.Address.FirstName, new { @class = "form-control", @value = Model.Address.FirstName })
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputPassword1">Current LastName: <span style="color: green;">@Model.Address.LastName</span></label>
                        @Html.TextBoxFor(m => m.Address.LastName, new { @class = "form-control", @value = Model.Address.LastName })
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputPassword1">Current City: <span style="color: green;">@Model.Address.City</span></label>
                        @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control", @value = Model.Address.City })
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputPassword1">Current State: <span style="color: green;">@Model.Address.State</span></label>
                        @Html.TextBoxFor(m => m.Address.State, new { @class = "form-control", @value = Model.Address.State })
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputPassword1">Current StreetAddress: <span style="color: green;">@Model.Address.StreetAddress</span></label>
                        @Html.TextBoxFor(m => m.Address.StreetAddress, new { @class = "form-control", @value = Model.Address.StreetAddress })
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputPassword1">Current PostCode: <span style="color: green;">@Model.Address.PostCode</span></label>
                        @Html.TextBoxFor(m => m.Address.PostCode, new { @class = "form-control", @value = Model.Address.PostCode })
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputPassword1">Current Country: <span style="color: green;">@Model.Address.Country</span></label>
                        @Html.TextBoxFor(m => m.Address.Country, new { @class = "form-control", @value = Model.Address.Country })
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputPassword1">Current Phone: <span style="color: green;">@Model.Address.Phone</span></label>
                        @Html.TextBoxFor(m => m.Address.Phone, new { @class = "form-control", @value = Model.Address.Phone })
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="exampleInputPassword1">Current Address Email: <span style="color: green;">@Model.Address.Email  </span></label>
                        @Html.TextBoxFor(m => m.Address.Email, new { @class = "form-control", @value = Model.Address.Email })
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-center" style="margin: 15px 0;">
                    <button type="submit" class="btn btn-primary" style="background-color: blue;">Save</button>
                </div>
            }
        </div>
    </div>
</div>
